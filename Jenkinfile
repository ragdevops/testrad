pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/ragdevops/testrad.git' 
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${JOB_NAME}:${BUILD_NUMBER}", "-f Dockerfile .")
                }
            }
        }

        stage('Compile Python Script') {
            steps {
                sh 'python zip_job.py'
            }
        }
    }
}
